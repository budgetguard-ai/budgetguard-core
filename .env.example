# Redis and Postgres connections
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgres://postgres:secret@localhost:5432/budgetguard

# Request rate limit per tenant per minute
MAX_REQS_PER_MIN=100

# Optional monthly spend cap in USD
MAX_MONTHLY_USD=50
# Default budget if tenant has no override
DEFAULT_BUDGET_USD=50
# Comma separated budget periods
BUDGET_PERIODS=daily,monthly
# Budget amounts per period
BUDGET_DAILY_USD=5
BUDGET_MONTHLY_USD=50
# For custom period specify start and end
# BUDGET_START_DATE=2025-06-01
# BUDGET_END_DATE=2025-06-30

# Set BUDGET_DAILY_<TENANT_ID> or BUDGET_MONTHLY_<TENANT_ID> to override per tenant

# Default OpenAI API key
OPENAI_KEY=

# Path to compiled OPA policy WASM
OPA_POLICY_PATH=src/policy/opa_policy.wasm

# Default admin key for management APIs
ADMIN_API_KEY=
# Default tenant created on first run
DEFAULT_TENANT=public
