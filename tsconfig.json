{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["es2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/__tests__/**", "src/tests/**", "src/dashboard/**"]
}
