{
  "name": "budgetguard-core",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "predev": "bash scripts/ensure-opa-wasm.sh",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc -p tsconfig.json",
    "prestart": "bash scripts/ensure-opa-wasm.sh",
    "start": "node dist/index.js",
    "migrate": "prisma migrate deploy",
    "preworker": "bash scripts/ensure-opa-wasm.sh",
    "worker": "ts-node src/worker.ts",
    "lint": "eslint . --ext .ts",
    "pretest": "bash scripts/ensure-opa-wasm.sh",
    "test": "vitest run",
    "prepare": "husky install",
    "commitlint": "commitlint",
    "postinstall": "npm run prepare"
  },
  "dependencies": {
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@open-policy-agent/opa-wasm": "^1.2.0",
    "@prisma/client": "^5.14.0",
    "fastify": "^5.4.0",
    "pino": "^9.7.0",
    "prisma": "^5.14.0",
    "redis": "^5.5.6",
    "tiktoken": "^1.0.21",
    "ts-node": "10.9.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/node": "24.0.7",
    "@types/redis": "^4.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "dotenv": "^16.4.0",
    "eslint": "9.30.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.0.0",
    "jiti": "^2.4.2",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  }
}
